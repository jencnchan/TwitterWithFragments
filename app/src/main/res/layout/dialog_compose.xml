<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_status"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginTop="1dp"
        android:background="@android:color/transparent"
        android:hint="@string/hint_compose"
        android:maxLength="140"
        android:textSize="@dimen/detail_name_text_size" />

    <View
        android:id="@+id/v_line"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="1dp"
        android:layout_below="@+id/et_status"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="@dimen/line_height"
        android:background="@color/customThemeColor"></View>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginTop="@dimen/item_margin"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/btn_save"
        android:background="@color/customThemeColor"
        android:text="@string/cancel"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_character_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:text="@string/character_limit"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/customThemeColor"
        android:text="@string/tweet"
        android:textColor="@color/colorWhite"
        android:layout_alignTop="@+id/btn_cancel"
        android:layout_alignLeft="@+id/et_status"
        android:layout_alignStart="@+id/et_status" />

</RelativeLayout>